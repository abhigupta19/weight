<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <CheckBox
            android:text="Mass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="65dp" android:layout_alignParentTop="true" android:id="@+id/checkBox"
            android:layout_marginTop="69dp"/>
    <CheckBox
            android:text="Earth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBox2" android:layout_alignParentEnd="true"
            android:layout_marginEnd="62dp" android:layout_alignTop="@+id/checkBox" android:layout_marginTop="3dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true" android:id="@+id/editText"
            android:layout_marginTop="141dp" android:hint="Weight"/>
    <Button
            android:text="Ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:id="@+id/button" android:layout_marginTop="215dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:id="@+id/textView" android:layout_marginBottom="175dp"/>
</RelativeLayout>